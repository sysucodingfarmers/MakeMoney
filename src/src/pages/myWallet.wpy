  .elementAlign{
    display: table; 
    vertical-align: middle;
  }
  .WalletDiv{
    width: 80%;
    height: 100%;
    margin:0 auto;

  }
  .money{
    margin:5% auto 5% auto;
    border-bottom: 1px solid gray; 
  }
  .extraMoney{
    margin:0 auto 5% auto;
    border-bottom: 1px solid gray; 
    
    font-size: 20px;
    font-weight: bold;
  }
  .recharge{
    width: 50%;
    margin:20% auto 5% auto;

  }
  .withdraw{
    width: 50%;
